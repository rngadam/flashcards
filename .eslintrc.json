{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "Diff": "readonly"
  },
  "rules": {
    "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }]
  }
}